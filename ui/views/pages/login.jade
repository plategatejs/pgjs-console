extend ../layout/main.jade

block page
  h2 Login
  div(class='content')
    
    div(class='container-fluid', ng-controller='LoginController')
      div(class='row')
        div(class='login-container col-sm-6 col-sm-offset-3')
          form(ng-submit='checkCredentials()')
            div(class='form-group')
              label(for='username') Username
              input(type='text', class='form-control', id='username', ng-model='username', placeholder='password', autofocus)

            div(class='form-group')
              label(for='password') Password
              input(type='password', class='form-control', id='password', ng-model='password', placeholder='username')

            div(class='form-group text-center')
              button(type='submit', class='btn btn-primary')
                | Login